  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run pm2 && npm run watch-ts ",
    "build": "npm run build-ts && npm run tslint",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "test": "jest",
    "pm2": "pm2 start bin/development.js --watch",
    "startApp": "node bin/development.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(tsx?|jsx?)$"
  },
  "dependencies": {
    "concurrently": "^3.5.0",
    "eslint": "^4.1.1",
    "global": "^4.3.2",
    "jest": "^20.0.4",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1",
    "koa-session": "^5.4.0",
    "lodash": "^4.17.4",
    "pm2": "^2.5.0",
    "ts-jest": "^20.0.7",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  },
  "devDependencies": {}
}
